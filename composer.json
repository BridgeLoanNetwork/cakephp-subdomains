{
    "name": "blnsoftware/cakephp-subdomains",
    "description": "Custom Subdomain handling for CakePHP application using route prefixes.",
    "type": "cakephp-plugin",
    "keywords": [
		"cakephp", 
		"cakephp3",
        "rcn-capital",
        "subdomains"
    ],
    "homepage": "https://github.com/blnsoftware/cakephp-subdomains",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Marjos",
            "email": "daniel.marjos@ticketnetwork.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "cakephp/cakephp": "~3.3"
    },
	"conflict": {
		"multidimensional/cakephp-subdomains": "*"
	},
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "Blnsoftware\\Subdomains\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Blnsoftware\\Subdomains\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
